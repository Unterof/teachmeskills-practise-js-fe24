<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <img class="card-img-top" style="height: 225px; width: 100%; display: block; object-fit: cover" src="{{image}}" data-holder-rendered="true">
    <div class="card-body">
      <p class="card-text"><b>{{title}}</b><br> {{description}}</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary add-to-cart" data-id="{{id}}">Add to cart</button>
        </div>
      </div>
    </div>
  </div>
</div>
